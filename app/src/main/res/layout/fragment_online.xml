<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafafa"
    tools:context=".ui.fragment.RecentlyReadFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="@string/online_leaderboard"
                    android:textColor="@color/secondary_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_online_leaderboard_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:layout_marginLeft="72dp"
                android:background="#CCCCCC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="@string/online_sort"
                    android:textColor="@color/secondary_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_online_sort_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>

    <!--  <include layout="@layout/content_searchresult" /> !-->
</FrameLayout>
